<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="50dip"
    android:layout_marginRight="4dip"
    android:layout_marginTop="8dip"
    android:layout_marginBottom="8dip"
	android:layout_marginLeft="8dip"
	android:paddingRight="2dip"
	android:id="@+id/media_el_frame"
    >

    <ImageView 
    	android:id="@+id/media_artwork"
    	android:layout_width="60dip"
    	android:layout_height="60dip"
    	android:layout_alignParentLeft="true"
    	android:paddingRight="6dip"
    	android:layout_centerVertical="true"
    	android:visibility="gone"
    	android:src="@drawable/albumart_mp_unknown"
    />
    <Button android:id="@+id/media_el_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="14dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:layout_alignParentRight="true" 
                android:height="38dip"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="4dip"
                android:layout_centerVertical="true"
                android:focusable="false"
                />
    <RelativeLayout android:id="@+id/media_text"
                  android:gravity="center_vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_toRightOf="@id/media_artwork"
                  android:layout_toLeftOf="@id/media_el_play"
                  android:layout_alignWithParentIfMissing="true"
                >
                
                <TextView android:id="@+id/media_el_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:singleLine="true"
                android:ellipsize="end" 
                />
    <TextView android:id="@+id/media_el_subfield1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Text 1"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@id/media_el_name"/>
                
    <TextView android:id="@+id/media_el_subfield2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Text 2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@id/media_el_subfield1"/>

    </RelativeLayout>   
</RelativeLayout> 